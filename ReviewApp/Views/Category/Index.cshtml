@model IEnumerable<ReviewApp.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>
<body>
    <h1>Categories</h1>

    @foreach (var category in Model)
    {
        <div>
            <a href="/category/details/@category.Id">@category.Id  - @category.Name</a>
        </div>
    }
</body>
</html>
